        <div id="{{item.accommodation}}" class="carousel slide " style="box-shadow: 10px 10px 10px rgb(208, 208, 208);"
            data-ride="carousel">

            <!-- Slides -->
            <div class="carousel-inner">

                @each(upload in item.gallery.uploads)
                <div class="carousel-item active">
