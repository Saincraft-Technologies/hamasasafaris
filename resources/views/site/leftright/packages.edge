<div class="row gx-0 mb-4 mb-lg-5 align-items-center">
    <div class="col-xl-4 col-lg-4 ">
        <h4>{{package.name}}</h4>
        <p class="text-black-50 mb-0">Charges: $ {{{package.cost}}} /person</p>
        <p class="text-black-50 mb-0">Conditions: {{{package.conditions}}}</p>
        <p class="text-black-50 mb-0">More-info: {{{package.description}}}</p>
    </div>
    <div class="col-xl-8 col-lg-8 featured-text ">
        @each(itinerary in package.itineraries)
        <hr>
        <div class=" mb-5 text-center card text-lg-left row">
            <div class="card-header bg-danger text-white">Day {{{itinerary.day}}} <span
                    style="float-right">Distance:{{{itinerary.distance}}}</span></div>
            <div class="card-body row">
                <div class="col-6">
                    <p class="text-black-50 mb-0">
                        From: {{itinerary.fromPoint.name}}<br>
                        {{{itinerary.fromPoint.caption}}}<br>
                        <a href="/packages/{{package.id}}/{{itinerary.fromPoint.id}}">view activities</a>
                    </p>
                </div>

                <div class="col-6">
                    <p class="text-black-50 mb-0">
                        To: {{itinerary.toPoint.name}}<br>
                        {{{itinerary.toPoint.caption}}}<br>
                        <a href="/packages/{{package.id}}/{{itinerary.toPoint.id}}">view activities</a>
                    </p>
                </div>
            </div>
            <div class="card-footer bg-default text-dark">Park Fee {{{itinerary.park_fee}}} <span
                    style="float-right">Transport:{{{itinerary.transport_fee}}}</span></div>
        </div>
        @endeach
        <a class="btn btn-danger" href="/packages/{{package.id}}">Book</a>
    </div>
</div>